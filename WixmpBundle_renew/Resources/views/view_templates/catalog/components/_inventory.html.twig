<div class="form-row">
    {% if api_product.manageVariants is defined and api_product.manageVariants %}
      <div style="font-size: large;padding-left: 2%;">Coming Soon for manage inventory for each product variant. </div>
    {% else %}
        <div class="form-group">
            {# {{ form_label(form.trackInventory,'trackInventory'|trans,{label_attr:{'class':'wk-bam-switch-label'}}) }} #}
            {# {{ form_label(form.trackInventory,'trackInventory'|trans,{attr:{'class':'wk-bam-switch-label'}}) }} #}
            {# <label for="form_trackInventory" class="wk-bam-switch-label">Track Inventory</label> #}
            {# {{ form_widget(form.trackInventory,{required:false,'attr':{'class':'wk-bam-switch-input'}}) }} #}
            <div class="form-check">
                <input type="checkbox" id="form_trackInventory" name="form[trackInventory]" class="wk-bam-switch-input form-check-input" {% if product.trackInventory is defined and product.trackInventory %}
                    checked="checked"
                {% endif %} value="1">
                <label class="wk-bam-switch-label form-check-label" for="form_trackInventory">{{ 'track_inventory'|trans }}</label>
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.inventory_status,'inventory_status'|trans,{label_attr:{class:'wk-required'}}) }}
            {% if villumi %}
                <i class="fa fa-info-circle" title="{{ 'wixmp_status'|trans }}" aria-hidden="true"></i>
            {% endif %}
            {{ form_widget(form.inventory_status) }}
        </div>
        <div class="form-group">
            {{ form_label(form.quantity,'quantity'|trans) }}
            {% if villumi %}
                <i class="fa fa-info-circle" title="{{ 'wixmp_quantity'|trans }}" aria-hidden="true"></i>
            {% endif %}
            {{ form_widget(form.quantity) }}
        </div>
    {% endif %}
</div>