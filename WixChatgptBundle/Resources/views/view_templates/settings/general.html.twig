{% if settingValues.wixchatgptcontent_api_secret is defined and settingValues.wixchatgptcontent_api_secret is not empty %}
	{% set api_secret = settingValues.wixchatgptcontent_api_secret %}
{% else %}
	{% set api_secret = '' %}
{% endif %}

{{ form_start(form) }}
<div class="tile">
	{{ form_errors(form) }}
	<div class="tile-body">
	
		{{ form_row(form._token) }}
		<label for="custom_form_api_secret" class="col-form-label wk-required">{{'wixchatgptcontent_api_secret'|trans}}</label>
		<div class="inpur-elm">
			{{ form_widget(form.wixchatgptcontent_api_secret,{attr:{class:'form-control col-md-6', value: api_secret, required: 'required'}})}}
			<small> How to get API Secret key? <a href="#" data-toggle="modal" data-target="#get-api-secret-key"> Help </a> </small>
		</div>
		
	</div>
	
	<div class="tile-footer">
    	<input type="submit" name="save" value="{{ 'wixchatgptcontent_button_save'|trans }}" class="btn btn-primary"/>
    </div>

</div>
{{ form_end(form, {'render_rest': false}) }}

