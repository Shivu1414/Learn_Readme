{% set controller_prefix = 'wixetsy_category_' %}
<div class="row">    
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-title-w-btn">
                <h5 class="title">
                    {% include 'common/list_items.html.twig' %}
                </h5>
                <div class="btn-group">
                    <a class = "btn btn-primary" title="{{ 'add_category_mapping'|trans }}" href = "{{ path('wixetsy_category_mapping', {storeHash:storeHash}) }}">{{ "add_category_mapping"|trans }}</a>
                </div>
            </div>
            <div class="tile-title-w-btn">
                
                <span>
                    {% if categoryMappings is defined and categoryMappings is not empty %}<b>{{ 'total_records'|trans ~ ": " ~ categoryMappings.totalItemCount }}</b>{% endif %}
                </span>
            </div>
            <div class="tile-body">
                <table class="table table-responsive" id="" width="100%">
                    <thead>
                        <tr>
                            <th width="50%">{{ 'wix_category'|trans }}</th>
                            <th width="50%">{{ 'etsy_category'|trans }}</th>
                            <th width="10%">{{ 'action'|trans }}</th>
                        </tr>
                    </thead>
                    {% for categoryMapping in categoryMappings %}
                        <tr>
                            <td>{{ categoryMapping.wixCategory.category }}</td>
                            <td>{{ categoryMapping.etsyCategory.category }}</td>
                            <td>
                               {% include "@wixetsy_twig/view_templates/catalog/components/_dropdown_action.html.twig" with {object:categoryMapping, controller_prefix:controller_prefix, extra:{} } %}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
                <div class="navigation">
                    {{ knp_pagination_render(categoryMappings) }}
                </div>
            </div>
        </div>
    </div>
</div>