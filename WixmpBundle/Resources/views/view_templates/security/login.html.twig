                <div class="utility">
                    <p class="semibold-text mb-0">
                        <a href="#" data-flip="1" data-toggle="flip">
                            <i class="fa fa-angle-left fa-fw"></i> 
                            {{ 'back_to_login'|trans }}
                        </a>
                    </p>
                    <p class="semibold-text mb-2">
                        <a href="#" data-flip="3" data-toggle="flip">{{ 'forgot_username'|trans }} ?</a>
